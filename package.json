{
  "name": "@marcopersi/shared",
  "version": "1.4.4",
  "description": "Pure TypeScript library with shared types, Zod schemas, and OpenAPI contracts for GoldSphere precious metals platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcopersi/goldsphere-shared.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "@marcopersi:registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "ci": "npm run lint && npm run type-check && npm run build",
    "prepack": "npm run ci",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "release:patch": "npm run version:patch && git push --follow-tags",
    "release:minor": "npm run version:minor && git push --follow-tags",
    "release:major": "npm run version:major && git push --follow-tags"
  },
  "keywords": [
    "typescript",
    "types",
    "zod",
    "validation",
    "openapi",
    "api-contracts",
    "precious-metals",
    "gold",
    "silver",
    "schemas",
    "pure-library",
    "framework-agnostic"
  ],
  "author": "GoldSphere API Team <api@goldsphere.vault>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "zod": "^3.22.0"
  }
}
